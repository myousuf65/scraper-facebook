<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>News Posts</title>
    <link href="css/style.css" rel="stylesheet">
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .post {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
      }
      .post-title {
        color: #333;
        margin-bottom: 10px;
      }
      .post-meta {
        color: #666;
        font-size: 0.8em;
        margin-bottom: 10px;
      }
      .post-link {
        color: #0066cc;
        text-decoration: none;
      }
      .post-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>All Facebook Posts</h1>
    <% if (posts && posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2 class="post-title"><%= post.post_title %></h2>
          <div class="post-meta">
            <p class="post-created">Created at: <%= post.created_at %></p>
            <p class="post-published">Publish at: <%= post.publish_at %></p>
          </div>
          <% if (post.link) { %>
            <p>
        <a href="<%= post.link %>" class="post-link" target="_blank"><%= post.link %></a>
            </p>
          <% } %>
          <% if (post.content) { %>
            <div class="post-content">
              <%= post.content %>
            </div>
          <% } %>
        </div>
      <% }); %>
    <% } else { %>
      <p>No posts found.</p>
    <% } %>
  </body>
</html>
